.main {
  font-family: Helvetica, Arial, sans-serif;
  padding: 0 40rpx;
}
.main .book-detail .title {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}
.main .book-detail .content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.main .book-detail .content .content-left {
  width: 45%;
}
.main .book-detail .content .content-left image {
  width: 100%;
  height: 400rpx;
}
.main .book-detail .content .content-right {
  width: 48%;
  font-size: 30rpx;
}
.main .book-detail .content .content-right text {
  line-height: 1.5;
}
.main .item-title {
  color: #007722;
  font-size: 40rpx;
  font-family: sans-serif;
  margin-bottom: 20rpx;
}
.main .item-text {
  font-size: 30rpx;
  line-height: 2;
  text-align: left;
  text-indent: 40rpx;
}
.main .book-intro {
  font-size: 35rpx;
  margin-bottom: 30rpx;
}
.main .author-intro {
  font-size: 35rpx;
  margin-bottom: 30rpx;
}
.main .tags {
  flex-direction: row;
  display: flex;
  font-size: 20rpx;
  justify-content: right;
  flex-wrap: wrap;
}
.main .tags .tag {
  height: 30rpx;
  padding: 8rpx;
  border: 1rpx solid gray;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
